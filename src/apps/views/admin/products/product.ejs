<%- include("../layout/head.ejs", {title: "Product" })%>

    <body>
        <%- include("../layout/header.ejs")%> <%- include("../layout/sidebar.ejs")%>
                <!-- nav -->
                <!-- sidebar -->
                <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                    <div class="row">
                        <ol class="breadcrumb">
                            <li>
                                <a href="#"><svg class="glyph stroked home">
                                        <use xlink:href="#stroked-home"></use>
                                    </svg></a>
                            </li>
                            <li class="active">Danh sách sản phẩm</li>
                        </ol>
                    </div>
                    <!--/.row-->

                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">Danh sách sản phẩm</h1>
                        </div>
                    </div>
                    <!--/.row-->
                    <div id="toolbar" class="btn-group">
                        <a href="/admin/products/create" class="btn btn-success">
                            <i class="glyphicon glyphicon-plus"></i> Thêm sản phẩm
                        </a>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <table data-toolbar="#toolbar" data-toggle="table">
                                        <thead>
                                            <tr>
                                                <th class="item-table" data-field="id" data-sortable="true">STT</th>
                                                <th class="item-table" data-field="name" data-sortable="true">Tên sản phẩm</th>
                                                <th class="item-table" data-field="price" data-sortable="true">Giá</th>
                                                <th class="item-table">Ảnh sản phẩm</th>
                                                <th class="item-table">Trạng thái</th>
                                                <th class="item-table">Danh mục</th>
                                                <th class="item-table">Hành động</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(const product of products) {%>

                                                <tr>
                                                    <td class="item-table">
                                                        <%=skip + 1%>
                                                    </td>
                                                    <td class="item-table">
                                                        <%=product.name%>
                                                    </td>
                                                    <td class="item-table">
                                                        <%=product.price%> vnd
                                                    </td>
                                                    <td style="text-align: center">
                                                        <img width="130" height="180"
                                                            src="../upload/images/<%=product.thumbnail%>" />
                                                    </td>
                                                    <td class="item-table">
                                                        <span
                                                            class="label label-<%=product.is_stock ? "success": "danger"%>">
                                                            <%= product.is_stock ? "Còn hàng" : "Hết hàng" %>
                                                        </span>
                                                    </td>
                                                    <td class="item-table">
                                                        <%=product.cat_id.title%>
                                                    </td>
                                                    <td class="form-group action-item-table">
                                                        <a href="/admin/products/edit" class="btn btn-primary"><i
                                                                class="glyphicon glyphicon-pencil"></i></a>
                                                        <a href="/admin/products/delete/<%=product._id%>"
                                                            class="btn btn-danger"><i
                                                                class="glyphicon glyphicon-remove"></i></a>
                                                        <!--  -->
                                                    </td>
                                                </tr>
                                                <%skip++%>
                                                    <%}%>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="panel-footer">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            <% if(page> 1) { %>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="/admin/products/?page=<%=page - 1%>">&laquo;</a>
                                                </li>
                                                <%}%>
                                                    <% for(item of pages){%>
                                                        <%if(item !="..." ) {%>
                                                            <li
                                                                class="page-item <%=item == page ? "active" : "" %>">
                                                                <a class="page-link"
                                                                    href="/admin/products/?page=<%=item%>">
                                                                    <%=item%>
                                                                </a>
                                                            </li>
                                                            <%} else { %>
                                                                <li
                                                                    class="page-item <%=item == page ? "active" : "" %>">
                                                                    <span class="page-link">
                                                                        <%=item%>
                                                                    </span>
                                                                </li>
                                                                <%}%>
                                                                    <%}%>
                                                                        <% if(page < totalPages){%>
                                                                            <li class="page-item">
                                                                                <a class="page-link"
                                                                                    href="#">&raquo;</a>
                                                                            </li>
                                                                            <%}%>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/.row-->
                </div>
                <!--/.main-->

                <script src="js/jquery-1.11.1.min.js"></script>
                <script src="js/bootstrap.min.js"></script>
                <script src="js/bootstrap-table.js"></script>
    </body>
    <%- include("../layout/footer.ejs")%>
        <!-- footer -->