<%- include("../layout/head.ejs", {title: "User" })%>

    <body>

        <%- include("../layout/header.ejs")%>
            <%- include("../layout/sidebar.ejs")%>
                <!-- nav -->
                <!-- sidebar -->

                <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                    <div class="row">
                        <ol class="breadcrumb">
                            <li><a href="#"><svg class="glyph stroked home">
                                        <use xlink:href="#stroked-home"></use>
                                    </svg></a></li>
                            <li class="active">Danh sách thành viên</li>
                        </ol>
                    </div><!--/.row-->

                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">Danh sách thành viên</h1>
                        </div>
                    </div><!--/.row-->
                    <div id="toolbar" class="btn-group">
                        <a href="/admin/users/create" class="btn btn-success">
                            <i class="glyphicon glyphicon-plus"></i> Thêm thành viên
                        </a>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <table data-toolbar="#toolbar" data-toggle="table">
                                        <thead>
                                            <tr>
                                                <th class="item-table" data-field="id" data-sortable="true">ID</th>
                                                <th class="item-table" data-field="name" data-sortable="true">Họ & Tên</th>
                                                <th class="item-table" data-field="price" data-sortable="true">Email</th>
                                                <th class="item-table">Quyền</th>
                                                <th class="item-table">Hành động</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let count = 1 %>
                                            <% for(user of users) {%>
                                                <tr>
                                                    <td class="item-table"><%= count %></td>
                                                    <td class="item-table"><%= user.full_name %></td>
                                                    <td class="item-table"><%= user.email %></td>
                                                    <td class="item-table"><span class="label label-<%= user.role == "admin" ? "danger" :"info" %>"><%= user.role == "admin" ? "Admin" :"Khách hàng" %></span></td>
                                                    <td class="form-group action-item-table">
                                                        <a href="/admin/users/edit-<%= user._id%>" class="btn btn-primary"><i
                                                                class="glyphicon glyphicon-pencil"></i></a>
                                                        <a href="/admin/users/del-<%= user._id%>" class="btn btn-danger"><i
                                                                class="glyphicon glyphicon-remove"></i></a>
                                                    </td>
                                                </tr>
                                                <% count++} %>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="panel-footer">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div><!--/.row-->
                </div> <!--/.main-->

                <script src="js/jquery-1.11.1.min.js"></script>
                <script src="js/bootstrap.min.js"></script>
                <script src="js/bootstrap-table.js"></script>
    </body>

    <%- include("../layout/footer.ejs")%>
        <!-- footer -->